			<groupId>com.github.reflect-framework</groupId>
			<artifactId>reflect-framework-for-javafx</artifactId>
			<version>0.0.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.github.reflect-framework</groupId>
			<artifactId>reflect-example-all-feature-domain</artifactId>
			<version>0.0.2-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.openjfx</groupId>
				<artifactId>javafx-maven-plugin</artifactId>
				<version>0.0.4</version>
				<configuration>
					<mainClass>nth.reflect.all.feature.javafx.AllFeatureForJavaFX</mainClass>
				</configuration>
			</plugin>
		</plugins>
	</build>
